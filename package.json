{
  "name": "obsidian-plugin-imagepaste",
  "version": "0.1.0",
  "description": "Obsidian のエディタへ Cmd + Alt + V でクリップボード画像を保存して挿入するプラグイン。",
  "main": "main.js",
  "scripts": {
    "build": "esbuild src/main.ts --bundle --platform=node --external:obsidian --format=cjs --outfile=main.js --sourcemap",
    "dev": "npm run build -- --watch",
    "lint": "tsc --noEmit"
  },
  "keywords": [
    "obsidian",
    "plugin",
    "clipboard",
    "image"
  ],
  "author": "Ryo",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.12.7",
    "esbuild": "^0.20.2",
    "obsidian": "^1.5.8",
    "typescript": "^5.4.5"
  }
}
